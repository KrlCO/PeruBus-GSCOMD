<Window Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSCOMD_2._0"
        xmlns:Viewer="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer" 
        x:Class="GSCOMD_2._0.ReporteVentas"
        mc:Ignorable="d"
        Title="Reporte de Ventas" Height="500" Width="850">

    <Grid>
        <DataGrid x:Name="dgLista" Visibility="Collapsed" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Exportar a Excel" Width="120" Height="30" Click="ExportarExcel_Click"/>
            <Button Content="Imprimir" Width="100" Height="30" Margin="10,0,0,0" Click="ImprimirReporte_Click"/>
        </StackPanel>
    </Grid>
</Window>
