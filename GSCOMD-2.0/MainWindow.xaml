<Window x:Class="GSCOMD_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSCOMD_2._0"
        mc:Ignorable="d"
        Title="GSCOMD" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtCodeTrab" HorizontalAlignment="Left" Height="24" Margin="30,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="150" KeyDown="txtCodeTrab_validacion" Grid.Column="1" FontFamily="Consolas" FontSize="11"/>
        <Label Content="Codigo Trabajador:" Margin="30,30,0,0" VerticalAlignment="Top" Height="26" FontFamily="Consolas" HorizontalAlignment="Left" Width="150" Grid.Column="1" FontWeight="Bold"/>
        <Label Content="Tipo Comida:" HorizontalAlignment="Left" Margin="19,122,0,0" VerticalAlignment="Top" Height="26" Width="80"/>
        <ComboBox HorizontalAlignment="Left" Margin="144,122,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Height="22"/>
        <TextBox x:Name="txtNombTrab" HorizontalAlignment="Left" Height="36" Margin="30,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="150" TextChanged="TextBox_TextChanged" Grid.Column="1" FontFamily="Consolas" FontSize="11" IsEnabled="False" IsReadOnly="True"/>
        <Label Content="Comensal:" HorizontalAlignment="Left" Margin="30,94,0,0" VerticalAlignment="Top" Height="26" Width="150" Grid.Column="1" FontFamily="Consolas" FontWeight="Bold"/>
        <Button x:Name="btnValidacion" Content="VALIDAR" Margin="30,217,216,0" VerticalAlignment="Top" Click="Button_Click" Grid.Column="1" Height="33" RenderTransformOrigin="0.52,0.03" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="158,354,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Grid.Column="1" Height="20"/>
        <!--<ListBox Name="listaAtencion" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,33,31,201" SelectionChanged="listaAtencion_SelectionChanged"/>-->

        <TextBox Name="txtCodigoTrabajador" TextChanged="txtCodigoTrabajador_TextChanged" Margin="144,162,167,234" />
        <Label Name="lblAsignacion" Content="Estado" HorizontalAlignment="Left" Margin="19,205,0,0" VerticalAlignment="Top" Width="266" Height="26"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Height="220" Width="160" Margin="0,30,30,0">
            <Image x:Name="imgTrab" RenderTransformOrigin="0.894,0.502"/>
        </Border>
        <!--<Label Name="lblAsignacion" Content="Estado" FontWeight="Bold" Grid.ColumnSpan="2" />-->

    </Grid>
</Window>
